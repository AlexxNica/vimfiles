<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>{{ name }}</ShortName>
  <Description>Use GitHub code search API to search {{ site }}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">{{ homepage }}/favicon.ico</Image>
  <Url
    method="get"
    type="text/html"
    template="{{ homepage }}/gh-opns/?q={searchTerms}"/>
  <moz:SearchForm>{{ homepage }}/gh-opns/</moz:SearchForm>
</OpenSearchDescription>
